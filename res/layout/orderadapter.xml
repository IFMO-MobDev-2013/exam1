<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carmodel" android:textStyle="bold" android:textSize="25dp" android:text="123"
            android:padding="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carcolour" android:textSize="25dp" android:textIsSelectable="false"
            android:textColor="#757575" android:text="123" android:padding="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carboxnumber" android:textSize="25dp" android:textColor="#606060"
            android:text="123" android:padding="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cartime" android:textSize="25dp" android:textColor="#505050"
            android:padding="5dp"/>
</LinearLayout>