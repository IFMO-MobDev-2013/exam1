<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="25dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carwashtitle" android:layout_gravity="center_horizontal"
            android:textStyle="bold" android:textSize="20dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/listView" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new order"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:textSize="20dp"
            android:onClick="addNewOrder"/>
</LinearLayout>

