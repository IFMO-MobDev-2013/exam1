<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/tvCarName" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/tvCarColor" android:layout_below="@+id/tvCarName" android:layout_alignParentLeft="true"
            android:singleLine="false" android:layout_alignRight="@+id/tvCarName"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/tvTime" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tvCarName"
            android:layout_alignBottom="@+id/tvCarColor"
            android:gravity="center_vertical|center_horizontal"/>
    <TextView android:layout_width="100dp" android:layout_height="fill_parent" android:id="@+id/tvBox"
              android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tvTime"
              android:layout_alignBottom="@+id/tvTime"
              android:gravity="center_vertical|center_horizontal"/>
</RelativeLayout>